{
  "log": {
    "loglevel": "debug",
    "dnsLog": true
  },
  "inbounds": [
    {
      "tag": "VLESS TCP VISION REALITY",
      "listen": "0.0.0.0",
      "port": 443,
      "protocol": "vless",
      "settings": {
        "clients": [
        {
          "id": "{{ xray_uuid.stdout}}",
		  "level": 0,
          "email": "default",
          "flow": "xtls-rprx-vision"
        }],
        "decryption": "none"
      },
      "streamSettings": {
        "network": "tcp",
        "security": "reality",
        "realitySettings": {
          "xver": 1,
          "dest": "127.0.0.1:4123",
          "serverNames": [
            "{{ xray_domain }}"
          ],
          "privateKey": "{{ x25519_pik.stdout }}",
          "shortIds": [
            "{{ short_id.stdout }}"
          ]
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
          "tls"
        ],
        "routeOnly": true
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom",
      "tag": "direct",
                                  "sockopt": {
    "tcpFastOpen": true,
"tcpKeepAliveIdle": 2,
"tcpKeepAliveInterval": 180,
"tcpUserTimeout": 2000,
"customSockopt": [
  {
    "system": "linux",
    "type": "int",
    "level":"6",
    "opt": "15",
    "value": "1"
  }
]
  },
      "settings": {
        "domainStrategy": "AsIs"
      }
    },
    {
      "protocol": "blackhole",
      "tag": "block"
    }
  ],
  "routing": {
    "rules": [
      {
        "protocol": "bittorrent",
        "outboundTag": "block"
      }
    ],
    "domainStrategy": "AsIs"
  },
  "dns": {
    "servers": [
    {"address":"localhost"}
    ],
    "queryStrategy": "UseIPv4",
    "disableFallback": false,
    "tag": "dns-aux"
  },
    "policy": {
    "levels": {
      "0": {
        "handshake": 10,
        "connIdle": 300,
        "uplinkOnly": 50,
        "downlinkOnly": 50,
        "statsUserUplink": false,
        "statsUserDownlink": false,
        "statsUserOnline": false,
        "bufferSize": 16384
      }
    }
        }
}
